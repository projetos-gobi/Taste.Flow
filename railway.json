{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd Backend && dotnet publish TasteFlow.Api/TasteFlow.Api.csproj -c Release -o ./publish"
  },
  "deploy": {
    "startCommand": "cd Backend && dotnet TasteFlow.Api/publish/TasteFlow.Api.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

