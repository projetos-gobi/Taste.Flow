{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet publish TasteFlow.Api/TasteFlow.Api.csproj -c Release -o ./publish"
  },
  "deploy": {
    "startCommand": "dotnet ./publish/TasteFlow.Api.dll",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
